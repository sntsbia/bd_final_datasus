<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://pessoaAcima30Browse.caption"
        focusComponent="pessoasTable">
    <data readOnly="true">
        <collection id="pessoasDc"
                    class="com.company.projectbd.entity.Pessoa">
            <fetchPlan extends="_base"/>
            <loader id="pessoasDl">
                <query>
                    <![CDATA[SELECT p FROM Pessoa p INNER JOIN Mora m INNER JOIN Municipio mu where p.idade > 30 AND mu.municipio = 'Rio de Janeiro']]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="pessoasTable" spacing="true">
        <filter id="filter"
                dataLoader="pessoasDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="pessoasTable"
                    width="100%"
                    dataContainer="pessoasDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="sexo"/>
                <column id="idade"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="pessoasTable.create"/>
                <button id="editBtn" action="pessoasTable.edit"/>
                <button id="removeBtn" action="pessoasTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
