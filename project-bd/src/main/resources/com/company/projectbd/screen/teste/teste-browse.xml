<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://testeBrowse.caption"
        focusComponent="testesTable">
    <data readOnly="true">
        <collection id="testesDc"
                    class="com.company.projectbd.entity.Teste">
            <fetchPlan extends="_base">
                <property name="fkIdPessoa" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="testesDl">
                <query>
                    <![CDATA[select e from Teste e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="testesTable" spacing="true">
        <filter id="filter"
                dataLoader="testesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="testesTable"
                    width="100%"
                    dataContainer="testesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="data_Teste"/>
                <column id="resultado"/>
                <column id="fkIdPessoa"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="testesTable.create"/>
                <button id="editBtn" action="testesTable.edit"/>
                <button id="removeBtn" action="testesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
